<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/header_cover"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:orientation="horizontal"
                android:background="#fff" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp">

                    <ImageButton
                        android:id="@+id/user_profile_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/profile_circular_border_imageview"
                        android:elevation="5dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/user_rating_photo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#000000"
                        android:background="@drawable/rating_circular_border_imageview"
                        android:elevation="5dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="35dp"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"/>



                        <TextView
                            android:id="@+id/user_profile_short_bio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_profile_name"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="#a9a9a9"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_profile_short_bio"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="#a9a9a9"
                            android:text="Stars"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_profile_contact_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="2dp"
                android:elevation="2dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/moneybag_48"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:text="Money Available"
                        android:id="@+id/tutor_profile_phone_number"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:background="#00bfff"
                        android:text="Request Redeem"
                        android:textAlignment="center"
                        android:id="@+id/reqredeem"/>


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_profile_contact_layout1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="2dp"
                android:elevation="2dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/hist">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_history_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:text="History"
                        android:onClick="showDatePickerDialog"
                        android:id="@+id/tutor_profile_phone_number1"/>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_profile_contact_layout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="2dp"
                android:elevation="2dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/accsett">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_settings_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:text="Account Settings"
                        android:id="@+id/tutor_profile_phone_number2"/>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_profile_contact_layout3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="2dp"
                android:elevation="2dp"
                android:orientation="vertical"
                android:id="@+id/log">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_power_settings_new_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:text="Log Out"
                        android:id="@+id/tutor_profile_phone_number3"/>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
